<div class="modal fade" id="modal_avatar" tabindex="-1" role="dialog" aria-labelledby="ModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="ModalCenterTitle">Update avatar</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="avatar_show" >
          <img id="avatar_show_img" src="https://cdn4.iconfinder.com/data/icons/multimedia-and-interface-glyph-1/32/Multimedia__User_account_person_profil_ui_avatar-512.png" alt="Avatar show">
        </div>
        <form id="input_file_form">
            <input type="file" name="avatar" id="input_file" onchange="readURL(this);">
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button type="submit" class="btn btn-primary" form="input_file_form">Update avatar</button>
      </div>
    </div>
  </div>
</div>