{% extends 'base.html.twig' %}

{% block body %}
    <div class="d-flex">
        <div>
            <img width="300px" src="/img/avatar/{{user.avatar}}" alt="{{ user.firstName }}">
        </div>
        <div class="ml-3">
            <h2>{{ user.firstName }}</h2>
            <p>{{ user.gender }}</p>
            <p>{{ user.age }}</p>
            <div id="reservation">
                <h5>5 last place with {{ user.firstName }}</h5>
                {% for reservation in reservations %}
                    <div class="reservation_place">
                        
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}
